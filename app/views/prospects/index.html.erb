<h1 class="text-center">Prospectos |
<%= link_to 'Crear Prospecto', new_prospect_path %></h1>

<div class="d-flex justify-content-center">
  <div class="card border-dark mb-3 text-center" style="max-width: 18rem;">
    <div class="card-body text-dark">
      <h1 class="card-title"><%= @totalintere.size %></h1>
      <p class="card-text">Interesados</p>
    </div>
  </div>
    <div class="card border-dark mb-3 text-center" style="max-width: 18rem;">
    <div class="card-body text-dark">
      <h1 class="card-title"><%= @totalprosp.size %></h1>
      <p class="card-text">Prospectoss</p>
    </div>
  </div>
    <div class="card border-dark mb-3 text-center" style="max-width: 18rem;">
    <div class="card-body text-dark">
      <h1 class="card-title"><%= @totalclient.size %></h1>
      <p class="card-text">Clientes</p>
    </div>
  </div>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th scope="col">Email</th>
      <th scope="col">Nombre</th>
      <th scope="col">Teléfono</th>
      <th scope="col">Estatus</th>
      <th scope="col">Ingresado por</th>
      <th scope="col">Fecha ingreso</th>
      <th scope="col">Conversaciones</th>
      <th scope="col">Opciones</th>
    </tr>
  </thead>
  <tbody>
  <% @prospects.each do |prospect| %>
    <tr>
      <td><%= prospect.email %></td>
      <td><%= prospect.name %>
          <%= prospect.last_name %></td>
      <td><%= prospect.phone %></td>
      <td><%= prospect.status %></td>
      <td><%= prospect.user_id %></td>
      <td><%= prospect.created_at.strftime("%d / %m / %y") %></td>
      <td> Pendiente </td>
      <td><%= link_to "ver", prospect_path(prospect) %>
          <%= link_to "Borrar",
                prospect_path(prospect),
                method: :delete,
                data: { confirm: "¿Estas seguro?" } %></td>
    </tr>
  <% end %>
  </tbody>
</table>
